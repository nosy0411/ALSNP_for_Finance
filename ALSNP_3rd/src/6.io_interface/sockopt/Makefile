#----------------------------------------------------------------------------
# Destination directory for binaries and class libraries
#----------------------------------------------------------------------------
PREFIX_DIR	= ../../..

OUT		= so_reuseaddr \
		  tcp_cli_reuseaddr \
			so_oobinline \
			so_rcvtimeo \
			so_keepalive \
			ipv6_v6only

include $(PREFIX_DIR)/common_opt.mk
#----------------------------------------------------------------------------
# Default target.
#----------------------------------------------------------------------------
.PHONY: all clean dep
all: $(OUT)

#----------------------------------------------------------------------------
# Suffix rules
#----------------------------------------------------------------------------
include $(PREFIX_DIR)/common_rule.mk

#----------------------------------------------------------------------------
# Build binaries
#----------------------------------------------------------------------------


#----------------------------------------------------------------------------
# others
#----------------------------------------------------------------------------
clean:
	rm -f *.o core core.* $(DEPENDENCY) $(OUT)

-include $(DEPENDENCY)
