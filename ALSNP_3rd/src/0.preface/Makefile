#----------------------------------------------------------------------------
# Destination directory for binaries and class libraries
#----------------------------------------------------------------------------
PREFIX_DIR  = ../..
OUT		= test_posixopt

include $(PREFIX_DIR)/common_opt.mk

#----------------------------------------------------------------------------
# Default target.
#----------------------------------------------------------------------------
.PHONY: all clean dep
all: $(OUT)

#----------------------------------------------------------------------------
# Suffix rules
#----------------------------------------------------------------------------
include $(PREFIX_DIR)/common_rule.mk

#----------------------------------------------------------------------------
# Build binaries
#----------------------------------------------------------------------------
test_posixopt.data:
	man posixoptions | col -b | egrep -o "\b_POSIX_[A-Z_]+\b" | sort | uniq > $@
test_posixopt.c: test_posixopt.data


#----------------------------------------------------------------------------
# others
#----------------------------------------------------------------------------
include $(PREFIX_DIR)/common_target.mk
